{
  "local": {
    "ipAddress": {
      "required": true,
      "type": "IP_ADDRESS"
    },
    "port": {
      "required": true,
      "type": "PORT"
    }
  },
  "remote": {
    "host": {
      "required": false,
      "type": "DOMAIN"
    },
    "ipAddress": {
      "required": true,
      "type": "IP_ADDRESS"
    },
    "port": {
      "required": true,
      "type": "PORT"
    }
  },
  "scriptInterval": {
    "required": true,
    "type": "INT",
    "min": 30000
  },
  "minAmount": {
    "required": true,
    "type": "INT",
    "min": 10
  },
  "maxAmount": {
    "required": true,
    "type": "INT",
    "min": 10
  },
  "anonFeePercent": {
    "required": true,
    "type": "FLOAT",
    "min": 0,
    "max": 99,
    "decimals": 2
  },
  "notificationEmail": {
    "required": true,
    "type": "EMAIL"
  },
  "smtp": {
    "user": {
      "required": true,
      "type": "EMAIL"
    },
    "pass": {
      "required": true,
      "type": "STRING"
    },
    "server": {
      "required": true,
      "type": "DOMAIN"
    }
  },
  "navCoin": {
    "user": {
      "required": true,
      "type": "STRING"
    },
    "pass": {
      "required": true,
      "type": "STRING"
    },
    "ip": {
      "required": true,
      "type": "IP_ADDRESS"
    },
    "port": {
      "required": true,
      "type": "VALUE",
      "value": "44444"
    },
    "walletPassphrase": {
      "required": {
        "conditional": "GLOBAL.encryptedWallet"
      },
      "type": "STRING"
    }
  },
  "subChain": {
    "user": {
      "required": true,
      "type": "STRING"
    },
    "pass": {
      "required": true,
      "type": "STRING"
    },
    "ip": {
      "required": true,
      "type": "IP_ADDRESS"
    },
    "port": {
      "required": true,
      "type": "VALUE",
      "value": "33333"
    },
    "walletPassphrase": {
      "required": {
        "conditional": "GLOBAL.encryptedWallet"
      },
      "type": "STRING"
    }
  },
  "secretOptions": {
    "salt": {
      "required": true,
      "type": "STRING",
      "length": 32
    },
    "saltRounds": {
      "required": true,
      "type": "INT",
      "min": 1,
      "max": 20
    }
  },
  "secret": {
    "required": true,
    "type": "STRING",
    "length": 42
  }
}
